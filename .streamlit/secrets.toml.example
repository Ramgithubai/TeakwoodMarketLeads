# Streamlit Secrets Configuration Example
# Copy this file to .streamlit/secrets.toml and add your actual API keys
# NEVER commit secrets.toml to version control!

# AI Chat Providers (Optional - app works without these)
GROQ_API_KEY = "your_groq_key_here"
OPENAI_API_KEY = "sk-your_openai_key_here"  


# Business Research APIs (Optional - only needed for web scraping feature)
TAVILY_API_KEY = "tvly-your_tavily_key_here"

# Additional configuration for deployment
[deployment]
environment = "production"  # or "staging", "development"
debug_mode = false
enable_analytics = true

# Database configuration (if needed for future features)
# [database]
# host = "your_db_host"
# port = 5432
# name = "your_db_name" 
# user = "your_db_user"
# password = "your_db_password"

# Custom configuration for your app
[app_config]
max_businesses_research = 20
default_ai_provider = "Local Analysis"
enable_web_scraping = true
enable_enhanced_timber_research = true

# Performance tuning for production
[performance]
cache_ttl = 3600  # Cache time-to-live in seconds
max_concurrent_users = 100
memory_limit_mb = 2048
